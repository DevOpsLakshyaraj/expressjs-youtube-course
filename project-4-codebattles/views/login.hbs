<div class="container p-4 m-auto border w-1/3 my-3 rounded-md shadow">
    <h1 class="text-3xl font-semibold mb-3 text-center">Login</h1>
    <p class="text-slate-400 mb-3 text-center">Login Using Your Credentials</p>

    <form action="" method="post">
        <div class="mb-3">
            <label for="email" class="leading-7 text-sm text-gray-600">Email Address</label>
            <input type="email" id="email" name="email"
                class="w-full bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-indigo-500 focus:bg-white focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
        </div>
        <div class="mb-3">
            <label for="password" class="leading-7 text-sm text-gray-600">Passsword</label>
            <input type="password" id="password" name="password"
                class="w-full bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-indigo-500 focus:bg-white focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
        </div>

        <button
            class="px-6 py-2 rounded-md bg-blue-500 border border-blue-500 font-semibold text-white mx-auto block">Login</button>
    </form>
</div>